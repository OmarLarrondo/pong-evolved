<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            styleClass="contenedor-principal"
            minWidth="800.0"
            minHeight="600.0">

    <!-- Título Superior -->
    <top>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="40" bottom="20"/>
            </padding>
            <Label text="SELECCIONE LA DIFICULTAD" styleClass="titulo-principal"/>
        </VBox>
    </top>

    <!-- Contenido Central: Menú Radial -->
    <center>
        <Pane fx:id="panelRadial" styleClass="panel-radial">

            <!-- Botón Central "IA LEVEL" -->
            <Button fx:id="botonCentral"
                    text="IA LEVEL"
                    styleClass="boton-central"
                    onAction="#desplegarMenuRadial"/>

            <!-- Botones de Nivel 1-10 (inicialmente ocultos) -->
            <Button fx:id="botonNivel1"
                    text="1"
                    styleClass="boton-nivel"
                    visible="false"
                    onAction="#seleccionarNivel"/>

            <Button fx:id="botonNivel2"
                    text="2"
                    styleClass="boton-nivel"
                    visible="false"
                    onAction="#seleccionarNivel"/>

            <Button fx:id="botonNivel3"
                    text="3"
                    styleClass="boton-nivel"
                    visible="false"
                    onAction="#seleccionarNivel"/>

            <Button fx:id="botonNivel4"
                    text="4"
                    styleClass="boton-nivel"
                    visible="false"
                    onAction="#seleccionarNivel"/>

            <Button fx:id="botonNivel5"
                    text="5"
                    styleClass="boton-nivel"
                    visible="false"
                    onAction="#seleccionarNivel"/>

            <Button fx:id="botonNivel6"
                    text="6"
                    styleClass="boton-nivel"
                    visible="false"
                    onAction="#seleccionarNivel"/>

            <Button fx:id="botonNivel7"
                    text="7"
                    styleClass="boton-nivel"
                    visible="false"
                    onAction="#seleccionarNivel"/>

            <Button fx:id="botonNivel8"
                    text="8"
                    styleClass="boton-nivel"
                    visible="false"
                    onAction="#seleccionarNivel"/>

            <Button fx:id="botonNivel9"
                    text="9"
                    styleClass="boton-nivel"
                    visible="false"
                    onAction="#seleccionarNivel"/>

            <Button fx:id="botonNivel10"
                    text="10"
                    styleClass="boton-nivel"
                    visible="false"
                    onAction="#seleccionarNivel"/>
        </Pane>
    </center>

    <!-- Footer: Botones Regresar y Continuar -->
    <bottom>
        <HBox spacing="20" alignment="CENTER">
            <padding>
                <Insets bottom="30" left="30" right="30" top="10"/>
            </padding>

            <Button fx:id="botonRegresar"
                    styleClass="boton-secundario"
                    onAction="#accionRegresar">
                <graphic>
                    <HBox spacing="8" alignment="CENTER">
                        <FontIcon iconLiteral="fas-arrow-left" iconSize="12"/>
                        <Label text="Regresar"/>
                    </HBox>
                </graphic>
            </Button>

            <Button fx:id="botonContinuar"
                    text="Continuar"
                    styleClass="boton-menu boton-continuar"
                    visible="false"
                    onAction="#accionContinuar"/>
        </HBox>
    </bottom>

</BorderPane>
